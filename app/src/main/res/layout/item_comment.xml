<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvCommentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên người bình luận"
        android:textColor="#2E7D32"
        android:textStyle="bold"
        android:textSize="13sp"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/tvCommentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung bình luận"
        android:textSize="13sp"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/tvCommentTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34"
        android:textSize="11sp"
        android:textColor="#888888"
        android:paddingEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEditComment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_edit"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="Sửa bình luận"
        android:visibility="gone"
        android:padding="4dp" />

    <ImageButton
        android:id="@+id/btnDeleteComment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="Xóa bình luận"
        android:visibility="gone"
        android:padding="4dp" />
</LinearLayout>